
<%- include("../partials/user/header.ejs") %>

<link rel="stylesheet" href="/styles/bus.css">
    <div class="main-search-container">
        <div class="search-container">
            <h2 class="text-center mb-4">Search For Routes</h2>
            <form action="/search-bus">
                <div class="position-relative mb-4">
                    <div class="mb-3">
                        <label class="form-label text-muted">From</label>
                        <input type="text" class="form-control custom-input" placeholder="Enter starting point">
                    </div>
                    <button type="button" class="swap-btn">
                        <i class="fas fa-arrow-up"></i>
                        <i class="fas fa-arrow-down"></i>
                    </button>
                    <div class="mb-4">
                        <label class="form-label text-muted">To</label>
                        <input type="text" class="form-control custom-input" placeholder="Enter destination">
                    </div>
                </div>
                <div class="text-center">
                    <button type="submit" class="search-btn">Search</button>
                </div>
            </form>
        </div>
    </div>
    
