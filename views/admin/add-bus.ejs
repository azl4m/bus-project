<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add Bus Schedule</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f8f9fa;
      font-family: Arial, sans-serif;
      padding: 20px;
    }

    h1 {
      margin-bottom: 20px;
    }

    .route-entry {
      border: 1px solid #ddd;
      border-radius: 5px;
      padding: 15px;
      margin-bottom: 20px;
      background-color: #fff;
    }

    .btn-custom {
      background-color: #0d6efd;
      color: #fff;
    }

    .btn-custom:hover {
      background-color: #0b5ed7;
      color: #fff;
    }

    @media (max-width: 576px) {
      h1 {
        font-size: 1.5rem;
      }

      .route-entry {
        padding: 10px;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <h1 class="text-center">Add Bus Schedule</h1>
    <form action="/add-bus" method="POST" class="needs-validation" novalidate>
      <!-- Bus Number -->
      <div class="mb-3">
        <label for="busNumber" class="form-label">Bus Number:</label>
        <input type="text" id="busNumber" name="busNumber" class="form-control" placeholder="Enter Bus Number" required>
        <div class="invalid-feedback">Please enter the bus number.</div>
      </div>

      <!-- Routes Container -->
      <div id="routes-container">
        <div class="route-entry">
          <h3>Route 1</h3>
          <div class="mb-3">
            <label for="routeId-1" class="form-label">Route:</label>
            <select id="routeId-1" name="routes[0][routeId]" class="form-select" required>
              <% if(routeData && routeData.length > 0){ %>
                <% for(let i=0; i < routeData.length; i++){ %>
                  <option value="<%= routeData[i]._id %>"><%= routeData[i].routeName %></option>
                <% } %>
              <% } %>
            </select>
            <div class="invalid-feedback">Please select a route.</div>
          </div>

          <div class="mb-3">
            <label for="departureTime-1" class="form-label">Departure Time:</label>
            <input type="time" id="departureTime-1" name="routes[0][departureTime]" class="form-control" required>
            <div class="invalid-feedback">Please select a departure time.</div>
          </div>
        </div>
      </div>

      <!-- Button to Add More Routes -->
      <div class="d-grid gap-2">
        <button type="button" class="btn btn-outline-primary" onclick="addRoute()">Add Another Route</button>
      </div>

      <!-- Submit Button -->
      <div class="d-grid gap-2 mt-3">
        <button type="submit" class="btn btn-custom">Add Schedule</button>
      </div>
    </form>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

  <script>
    let routeCount = 1; // Initialize with 1 because the first route already exists

    function addRoute() {
      const routesContainer = document.getElementById('routes-container');
      const newRoute = document.createElement('div');
      newRoute.classList.add('route-entry');

      newRoute.innerHTML = `
        <h3>Route ${routeCount + 1}</h3>
        <div class="mb-3">
          <label for="routeId-${routeCount + 1}" class="form-label">Route:</label>
          <select id="routeId-${routeCount + 1}" name="routes[${routeCount}][routeId]" class="form-select" required>
            <% if(routeData && routeData.length > 0){ %>
              <% for(let i=0; i < routeData.length; i++){ %>
                <option value="<%= routeData[i]._id %>"><%= routeData[i].routeName %></option>
              <% } %>
            <% } %>
          </select>
          <div class="invalid-feedback">Please select a route.</div>
        </div>

        <div class="mb-3">
          <label for="departureTime-${routeCount + 1}" class="form-label">Departure Time:</label>
          <input type="time" id="departureTime-${routeCount + 1}" name="routes[${routeCount}][departureTime]" class="form-control" required>
          <div class="invalid-feedback">Please select a departure time.</div>
        </div>
      `;

      routesContainer.appendChild(newRoute);
      routeCount++; // Increment route count for the next route
    }

    // Bootstrap form validation
    (function () {
      'use strict'
      const forms = document.querySelectorAll('.needs-validation')
      Array.from(forms).forEach(function (form) {
        form.addEventListener('submit', function (event) {
          if (!form.checkValidity()) {
            event.preventDefault()
            event.stopPropagation()
          }
          form.classList.add('was-validated')
        }, false)
      })
    })()
  </script>
</body>
</html>